{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "baseUrl": "./",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}